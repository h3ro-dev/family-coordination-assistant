# Server
PORT=3007

# Database (local docker-compose defaults)
DATABASE_URL=postgres://postgres:postgres@localhost:55433/fca_dev

# Admin (pilot)
ADMIN_TOKEN=replace_me

# Public base URL (required for Twilio Voice so Twilio can reach webhook endpoints)
# Example (Railway): https://your-app.up.railway.app
PUBLIC_BASE_URL=http://localhost:3007

# Twilio
TWILIO_ACCOUNT_SID=replace_me
TWILIO_AUTH_TOKEN=replace_me
# Twilio Voice webhook shared secret (appended as ?token=... to voice webhook URLs)
TWILIO_VOICE_WEBHOOK_TOKEN=replace_me

# Email (Resend)
RESEND_API_KEY=replace_me
EMAIL_FROM=assistant@example.com
# Used to construct Reply-To as: local+<familyId>@domain
# For pilots without a custom domain, a proxy mailbox like Gmail works:
#   EMAIL_REPLY_TO=familyassistant@gmail.com
EMAIL_REPLY_TO=assistant@example.com
INBOUND_EMAIL_TOKEN=replace_me

# Voice (result ingestion)
INBOUND_VOICE_TOKEN=replace_me

# Defaults
DEFAULT_TIMEZONE=America/Denver
